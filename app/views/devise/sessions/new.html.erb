<%= render "shared/header" %>

<div class="title">
  <h2>ログイン</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-box">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-MAIL", class: "regi-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "PASSWORD", class: "regi-form" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit "ログイン", class: "submit" %>
    </div>

    <div class="another-choice">
      <p><%= render "devise/shared/links" %></p>
    <div>
  </div>
<% end %>

