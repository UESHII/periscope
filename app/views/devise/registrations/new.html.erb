<%= render "shared/header" %>
<div class="title">
  <h2>新規登録</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="regi-form-box">
    <div class="field">
      <%= f.text_field :name, autofocus: true, maxlength: "20",placeholder: "NAME", class: "regi-form" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-MAIL", class: "regi-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード\n英数字混合6文字以上", class: "regi-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワード", class: "regi-form" %>
    </div>

    <div class="field">
      <%= f.submit "登録", class: "submit" %>
    </div>

    <div class="another-choice">
      <p><%= render "devise/shared/links" %></p>
    <div>
  </div>
<% end %>




