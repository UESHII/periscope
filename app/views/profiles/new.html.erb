<%# header without method %>
<header>
  <div class="top-bar">
    <div class="top-bar-left">
      <%= link_to "PERISCOPE", root_path, class: "logo"%>
    </div>
  </div>
</header>
<%# //header without method %>

<div class='profiles-sell-main'>
  <div class="title">
    プロフィール作成
  </div>

  <%= form_with model: @profile, method: :post, local: true do |f| %>
    <div class="regi-form-box">
      <div class="field">
        <p>プロフィール画像</p>
        <%= f.file_field :avatar, id:"avatar" %>
      </div>
      <div class="field">
        <p>連絡先情報</p>
        <%= f.text_area :contact, class:"profiles-text", id:"profiles-contact", placeholder: "TEL: 000-0000-0000" %>
      </div>
      <div class="field">
        <p>所属チーム</p>
        <%= f.collection_select(:team_id, @teams, :id, :name, {include_blank: "---"}, {class:"select-box", id:"profile-team"}) %>
      </div>
      <div class="field">
        <p>入社日</p>
        <%= f.date_field :joining_date %>
      </div>
      <div class="field">
        <%= f.submit "登録" ,class:"submit" %>
      </div>
    </div>
  <% end %>
</div>