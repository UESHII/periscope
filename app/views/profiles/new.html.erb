<div class='profiles-sell-main'>
  <h2 class='profile-sell-input'>Create your profile</h2>

  <%= form_with model: @profile, method: :post, local: true do |f| %>
    <div class='new-profile'>
      <p>Upload your avater</p>
      <%= f.file_field :avatar, id:"avatar" %>
      <p>Input your contact informations</p>
      <%= f.text_area :contact, class:"profiles-text", id:"profiles-contact", placeholder:"TEL: 000-0000-0000, E-mail: example@example.com" %>
      <p>Select your team</p>
      <%= f.collection_select(:team_id, @teams, :id, :name, {include_blank: "---"}, {class:"select-box", id:"profile-team"}) %>
      <p>Select your joining date</p>
      <%= f.date_select :joining_date, {:use_month_numbers => true} %>
      
      <%= f.submit "Submit" ,class:"sell-btn" %>
    </div>
  <% end %>
</div>