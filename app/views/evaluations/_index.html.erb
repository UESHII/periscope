<div class="evaluation-list">
  <%# ここにList Titleを挿入 %>
  Evaluations waiting for review.
  <hr>
  <% if @evaluations.any? %>

    <% @evaluations.each do |evaluation| %>
      <% unless evaluation.reviews.find_by(user_id: current_user.id) %>
        <% if evaluation.user.profile.team == current_user.profile.team && evaluation.user_id != current_user.id %>
          <div class="new-post">
            <%= evaluation.id %> : <%= evaluation.updated_at %>
            <%= link_to "Details", evaluation_path(evaluation.id) %>
            <ul>
              <li>
              <% if evaluation.user.profile.avatar.attached? %>
                <%= image_tag evaluation.user.profile.avatar.variant(resize: "100x100"), class:"avatar"%>
              <% else %>
                <%= image_tag ("noimage.png"),class:"avatar" %>
              <% end %>
              </li>
              <li>Fiscal Year <%= evaluation.fiscal_year.year %>/<%= evaluation.fiscal_year.month %>
              <li>User Name <%= link_to evaluation.user.name, profile_path(evaluation.user.profile.id) %></li>
              <li>Team <%= evaluation.user.profile.team.name %></li>
              <li>Goal <%= evaluation.goal %></li>
              <li>Result <%= evaluation.result %></li>
            </ul>
          </div>
        <% end %>
      <% end %>
    <% end %>

  <% else %>
    Evaluations appear here after new evaluation posted.
  <% end %>
  <hr>

  <div class="new-update">
  </div>
</div>